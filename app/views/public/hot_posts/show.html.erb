<div class="container">
  <div class="row">
    <div class="col-md-7 post_item">
      <h3 class="d-block p-2 post_item__head" style="margin-bottom: 0px;"><%= @hot_post.title %></h3>
      <% if @hot_post.hot_post_image.attached? %>
        <div class="d-block post_item__image d-flex justify-content-around"><%= image_tag @hot_post.get_hot_post_image(300, 300) %></div>
      <% end %>
      <p class="d-block p-2 post_item__body border rounded border-dark"><%= @hot_post.body %></p>
      <div class="d-block post_item__body2">
        <% if @hot_post.favorited?(current_end_user) %>
          <%= link_to public_hot_post_favorites_path(@hot_post.id), method: :delete do %>
            <span style="color:red;">♥<%= @hot_post.favorites.count %></span>
          <% end%>
        <% else %>
          <%= link_to public_hot_post_favorites_path(@hot_post.id), method: :post do %>
            <span>♥<%= @hot_post.favorites.count %></span>
          <% end%>
        <% end %>
      </div>
      <p class="d-block post_item__body2">ジャンル <%= @hot_post.genre.name %></p>
      <% if @hot_post.hot_spring_id.present? %>
        <%= link_to public_hot_spring_path(@hot_spring) do %>
          <p class="d-block post_item__body2"><%= @hot_post.hot_spring.name %></p>
        <% end %>
      <% end %>
      <div class="d-flex justify-content-around">
        <% if @end_user == current_end_user %>
          <%= link_to "編集する", edit_public_hot_post_path(@hot_post.id), class:"btn btn-success" %>
          <%= link_to "削除する", public_hot_post_path(@hot_post.id), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に消しますか?" %>
        <% end %>
      </div>
    </div>

    <div class="col-md-5">
      <div class="row justify-content-center">
        <h5 class="col-md-7">コメントフォーム</h5>
        <%= form_with model: [@hot_post, @comment], url: public_hot_post_comments_path(@hot_post.id) do |f| %>
          <div class="col-md-auto py-2"><%= f.text_area :content, class:"form-control comment_content" %></div>
          <%= f.hidden_field :hot_post_id, :value => @hot_post.id %>
          <%= f.hidden_field :end_user_id, :value => current_end_user.id %>
          <div class="col-md-7 comment_item"><%= f.submit 'コメントする', class:"btn btn-success" %></div>
        <% end %>
      </div>
      <div class="row justify-content-center">
        <% @comments.each do |comment| %>
          <div class="col-md-auto comment_item">
            <div class="d-block my-1 border-top border-dark">
              <%= comment.end_user.user_name %>
              <%= comment.created_at.strftime('%Y/%m/%d') %>
              <% if comment.end_user == current_end_user %>
                <%= link_to "削除する", public_hot_post_comment_path(comment.id), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に消しますか?" %>
              <% end%>
            </div>
            <div class="d-block my-1 border-bottom border-dark comment_item_body">
              <%= comment.content %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="row justify-content-center"><%= paginate @comments %></div>
    </div>

  </div>
</div>