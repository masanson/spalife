<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

<div class="container">
  <div class="row justify-content-center m-5">
    <%= form_with model: @end_user, url: end_user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col-2">氏名</div>
      <div class="col-1"><%= f.label :last_name, "(姓)" %></div>
      <div class="col-3"><%= f.text_field :last_name %></div>
      <div class="col-1"><%= f.label :first_name, "(名)" %></div>
      <div class="col-3"><%= f.text_field :first_name %></div>
    </div>
    <div class="row">
      <div class="col-2">フリガナ</div>
      <div class="col-1"><%= f.label :last_name_kana, "(セイ)" %></div>
      <div class="col-3"><%= f.text_field :last_name_kana %></div>
      <div class="col-1"><%= f.label :first_name_kana, "(メイ)" %></div>
      <div class="col-3"><%= f.text_field :first_name_kana %></div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.label :user_name, "ユーザー名" %></div>
      <div class="col-3"><%= f.text_field :user_name %></div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.label :sex, "性別" %></div>
      <div class="col-3"></div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
      <div class="col-3"><%= f.text_field :postal_code %></div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.label :address, "住所" %></div>
      <div class="col-3"><%= f.text_field :address %></div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></div>
      <div class="col-3"><%= f.telephone_field :telephone_number %></div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.label :password, "パスワード(６文字以上)" %></div>
      <div class="col-5">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
      <div class="col-5"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.submit "新規登録", class:"btn btn-success" %></div>
    </div>
    <% end %>
  </div>
</div>