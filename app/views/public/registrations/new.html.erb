<div class="container">
  <div class="row">
    <h2 class="bg-light text-dark">新規登録</h2>
  </div>
  <div class="row p-md-0 m-md-1">
    <%= form_with model: @end_user, url: end_user_registration_path, class:"registration_form" do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="row regist_name_row">
        <div class="col-md-3"><%= f.label :name, "氏名" %></div>
        <div class="col-md-auto">(姓)<%= f.text_field :last_name %></div>
        <div class="col-md-auto">(名)<%= f.text_field :first_name %></div>
      </div>
      <div class="row regist_name_row">
        <div class="col-md-3"><%= f.label :name_, "フリガナ" %></div>
        <div class="col-md-auto">(ｾｲ)<%= f.text_field :last_name_kana %></div>
        <div class="col-md-auto">(ﾒｲ)<%= f.text_field :first_name_kana %></div>
      </div>
      <div class="row regist_item_row">
        <div class="col-md-3"><%= f.label :user_name, "ユーザー名" %></div>
        <div class="col-md-auto regist_item"><%= f.text_field :user_name %></div>
      </div>
      <div class="row regist_item_row">
        <div class="col-md-3"><%= f.label :sex, "性別" %></div>
        <div class="col-md-auto">
          <%= f.radio_button :sex, EndUser.sexes.key(0) %>
          <%= f.label :sex, EndUser.sexes_i18n[:male] %>
        </div>
        <div class="col-md-auto">
          <%= f.radio_button :sex, EndUser.sexes.key(1) %>
          <%= f.label :sex, EndUser.sexes_i18n[:female] %>
        </div>
        <div class="col-md-auto">
          <%= f.radio_button :sex, EndUser.sexes.key(2) %>
          <%= f.label :sex, EndUser.sexes_i18n[:not_applicable] %>
        </div>
      </div>
      <div class="row regist_item_row">
        <div class="col-md-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-md-4 regist_item"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>
      <div class="row regist_item_row">
        <div class="col-md-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
        <div class="col-md-4 regist_item"><%= f.text_field :postal_code %></div>
      </div>
      <div class="row regist_item_row">
        <div class="col-md-3"><%= f.label :address, "住所" %></div>
        <div class="col-md-4 regist_item"><%= f.text_field :address %></div>
      </div>
      <div class="row regist_item_row">
        <div class="col-md-3"><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></div>
        <div class="col-md-4 regist_item"><%= f.telephone_field :telephone_number %></div>
      </div>
      <div class="row regist_item_row">
        <div class="col-md-3"><%= f.label :password, "パスワード(６文字以上)" %></div>
        <div class="col-md-4 regist_item">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
      <div class="row regist_item_row">
        <div class="col-md-3"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
        <div class="col-md-4 regist_item"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-2"><%= f.submit "新規登録", class:"btn btn-success" %></div>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-start m-md-3">既に登録済の方</div>
  <div class="row justify-content-center">
      <a class="col-1 px-0"><%= render "public/shared/links" %></a>
      <p class="col-3 px-0">からログインしてください</p>
  </div>
</div>