<div class="container">
  <div class="row justify-content-between">
    <h3 class="col">投稿一覧</h3>
  </div>
  <div class="row">
    <div class="col">投稿タイトル</div>
  </div>
  <div class="row">
    <% @hot_posts.each do |hot_post| %>
    <div class="col">
      <%= link_to admin_hot_post_path(hot_post.id) do %>
        <%= hot_post.title %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>