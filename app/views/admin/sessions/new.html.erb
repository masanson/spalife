<div class="container bg-white mt-md-5">
  <h2 class="row justify-content-center py-md-2">管理者ログイン</h2>
  <div class="row justify-content-center m-md-5">
    <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="row py-md-2">
      <div class="col-5"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>
    <div class="row py-md-2">
      <div class="col-5"><%= f.label :password, "パスワード" %></div>
      <div class="col-3"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>
    <div class="row">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "パスワードを記録しますか？" %>
        </div>
      <% end %>
    </div>
    <div class="row justify-content-center py-md-2">
      <div class="col-2"><%= f.submit "ログイン", class:"btn btn-primary" %></div>
    </div>
    <% end %>
  </div>
</div>
