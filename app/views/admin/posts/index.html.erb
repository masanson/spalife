<h1>Admin::Posts#index</h1>
<p>Find me in app/views/admin/posts/index.html.erb</p>
<div class="container">
  <div class="row justify-content-between">
    <h3 class="col">投稿一覧</h3>
  </div>
  <div class="row">
    <div class="col">投稿タイトル</div>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col">
      <%= link_to admin_post_path(post.id) do %>
        <%= post.title %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>