<div class="container">
  <div class="row d-flex flex-column">
    <% if @genre.errors.any? %>
      <p class="p-0"><%= @genre.errors.count %>件のエラーが発生しました。</p>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
  </div>
  <div class="m-md-2 new_spring_form border rounded">
  <h3>ジャンル作成フォーム</h3>
    <%= form_with model: @hot_spring, url: admin_hot_springs_path, method: :post do |f| %>
      <div class="row justify-content-center py-1">
        <div class="col-md-3">ジャンル名</div>
        <div class="col-md-6"><%= f.text_field :name %></div>
      </div>
      <div class="row justify-content-center py-2">
        <%= f.submit '新規作成', class:"btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class="row mt-3 justify-content-between">
    <h3 class="col-md-auto">ジャンル一覧</h3>
  </div>
  <div class="col-md-auto">
    <table class="table table_spring table-hover table-inverse">
      <thead class="table_spring_head">
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
        <tbody class="table_spring_body">
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
  <div class="row justify-content-center"><%= paginate @genres %></div>
</div>