<div class="container">
  <div class="row d-flex flex-column">
    
  </div>
  
  <div class="row new_genre_form border rounded">
    <div class="row">
      <h3 class="col-md-auto">ジャンル作成フォーム</h3>
      <div class="col-md-auto mx-md-5">
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
          <div class="row py-md-3"><%= f.label :name, "ジャンル名" %>：<%= f.text_field :name %></div>
          <div class="row justify-content-center"><%= f.submit '新規作成', class:"btn btn-success" %></div>
        <% end %>
      </div>
      <div class="col-md">
        <p class="row">
          <%= flash[:notice] %>
        </p>
        <p class="row">
          <%= flash.now[:alert] %>
        </p>
        <div class="row">
          <% if @genre.errors.any? %>
            <p><%= @genre.errors.count %>件のエラーが発生しました。</p>
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row mt-3 justify-content-between">
    <h3 class="col-md-auto">ジャンル一覧</h3>
  </div>
  <div class="col-md-auto">
    <table class="table table_genre table-hover table-inverse">
      <thead class="table_genre_head">
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
        <tbody class="table_genre_body">
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
  <div class="row justify-content-center"><%= paginate @genres %></div>
</div>