<h1>Admin::Genres#index</h1>
<p>Find me in app/views/admin/genres/index.html.erb</p>
<div class="container">
  <h4 class="mt-5">ジャンル一覧・追加</h4>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="row justify-content-center">
    <div class="col-7 m-2">ジャンル名<%= f.text_field :name %></div>
    <div class="col-3 m-2"><%= f.submit '新規登録', class:"btn btn-success" %></div>
  </div>
  <% end %>
</div>

<div class="row justify-content-between pt-5">
  <table class="table">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <% @genres.each do |genre| %>
    <tbody>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
</div>