<div class="container ger-container">
  <div class="row d-flex flex-column">
    <% if @genre.errors.any? %>
      <p class="p-0"><%= @genre.errors.count %>件のエラーが発生しました。</p>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
  </div>
  
  <div class="edit_genre_form border rounded">
    <h3 class="py-1">ジャンル編集フォーム</h3>
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <div class="row justify-content-center py-5">
        <div class="col-md-auto">ジャンル名：<%= f.text_field :name %></div>
      </div>
      <div class="row justify-content-around py-2">
        <%= f.submit '編集完了', class:"btn btn-success" %>
        <%= link_to '編集を止める', admin_genres_path, class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
