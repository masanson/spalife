<h1>Admin::Genres#edit</h1>
<p>Find me in app/views/admin/genres/edit.html.erb</p>
<div class="container">
  <div class="row justify-content-center m-md-5">
    <h4 class="mt-3">ジャンル編集</h4>
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <table >
      <tbody>
        <tr>
          <th class="col-sm-4">ジャンル名</th>
          <td class="col-sm-4"><%= f.text_field :name %></td>
          <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
</div>