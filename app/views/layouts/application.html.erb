<!DOCTYPE html>
<html>
  <head>
    <title>Spalife</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/42b17b159c.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row">
      <div class="col-2 justify-content-center bg-dark "><%= render 'layouts/sidebar'%></div>
      <div class="col-9">
        <header>
          <div class="container">
            <div class="row justify-content-center">
              <h1 class="col-4">
                <%= link_to root_path do %>
                  SPALIFE
                <% end %>
              </h1>
              <p>
                <%= flash[:notice] %>
                <%= flash.now[:alert] %>
              </p>
            </div>
          </div>
        </header>

        <main><%= yield %></main>

        <footer>
          <div class="container mt-5">
            <div class="row p-md-">
              <div class="mx-auto"></div>
            </div>
          </div>
        </footer>
      </div>
    </div>
  </body>
</html>
