<!DOCTYPE html>
<html>
  <head>
    <title>Spalife</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/42b17b159c.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row">
      <div class="col-md-auto justify-content-center p-md-1"><%= render 'layouts/sidebar'%></div>
      <div class="col-md-10 p-md-0">
        <header>
          <div class="container">
            <div class="row justify-content-center">
              <h1 class="col-md-2">
                <%= link_to root_path do %>
                  SPALIFE
                <% end %>
              </h1>
              <p>
                <%= flash[:notice] %>
                <%= flash.now[:alert] %>
              </p>
            </div>
          </div>
        </header>

        <main class="main"><%= yield %></main>

      </div>
    </div>
    <footer class="row bg-secondary">
      <div class="container mt-4 color:#fafad2;">
        <div class="row p-md-3"></div>
      </div>
    </footer>
  </body>
</html>
